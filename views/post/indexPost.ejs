<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/post.styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>Posts</title>
  </head>
  <body>
    <header class="post_header">
      <h1>Posts</h1>
    </header>
    <main>
      <section class="post_section">
        <div class="post_section__createButton_container">
          <!-- <% if (isAddPostShown) { %>
          <a href="/posts?isAddPostShown=<%= !isAddPostShown %>">
            <button class="post_section__cancel_post_button">cancel</button>
          </a>
          <% } else { %>
          <a href="/posts?isAddPostShown=<%= !isAddPostShown %>">
            <button class="post_section__create_post_button">create</button>
          </a>
          <% } %> -->
          <button
            id="toggleAddPostButton"
            class="post_section__create_post_button"
          >
            create
          </button>
          <p>total: <%=posts.length%></p>
        </div>
        <div id="addPostContainer" style="display: none">
          <%- include('indexPost_addPost.ejs') %>
        </div>
        <ul class="post_section__list list">
          <% posts.forEach((post) => { %> <%- include('indexPost_listItem.ejs',
          { post }) %> <%})%>
        </ul>
      </section>
    </main>
    <script src="/js/postScript.js"></script>
  </body>
</html>
