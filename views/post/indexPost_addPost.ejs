<form method="post" action="/posts" class="post_section__add_post add_post">
  <div class="add_post__title_input_container">
    <label for="title">Title</label>
    <input type="text" name="title" required autofocus />
  </div>
  <div class="add_post__content_input_container">
    <label for="content">Content</label>
    <textarea name="content" required></textarea>
  </div>
  <div class="add_post__button_container">
    <button class="add_post__button">submit</button>
  </div>
</form>
